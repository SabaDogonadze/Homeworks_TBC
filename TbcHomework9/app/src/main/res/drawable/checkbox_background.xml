<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- background color when checked -->
            <stroke android:width="5dp" android:color="@color/black" /> <!-- black border -->
            <corners android:radius="4dp"/> <!-- optional rounded corners -->
        </shape>
    </item>

    <!-- Unchecked State -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- transparent background when unchecked -->
            <stroke android:width="5dp" android:color="@color/black" /> <!-- black border -->
            <corners android:radius="4dp"/> <!-- optional rounded corners -->
        </shape>
    </item>
</selector>
