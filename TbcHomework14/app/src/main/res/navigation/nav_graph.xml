<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ordersFragment">

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.tbchomework14.fragment.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" >
        <action
            android:id="@+id/action_ordersFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment"
            app:enterAnim="@anim/from_right" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.tbchomework14.fragment.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <argument
            android:name="product_image"
            app:argType="integer" />
        <argument
            android:name="product_title"
            app:argType="string" />
        <argument android:name="product_color"
            app:argType="integer" />
        <argument
            android:name="producty_quantity"
            app:argType="integer" />
        <argument
            android:name="product_price"
            app:argType="integer" />
        <action
            android:id="@+id/action_itemDetailFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
    </fragment>
</navigation>