<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/itemFragment">
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.tbchomework15.fragment.MainFragment"
        android:label="fragment_item"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_itemFragment_to_detailCardFragment"
            app:destination="@id/detailCardFragment" />
        <action
            android:id="@+id/action_itemFragment_to_bottomSheetFragment"
            app:destination="@id/bottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailCardFragment"
        android:name="com.example.tbchomework15.fragment.DetailCardFragment"
        android:label="fragment_detail_card"
        tools:layout="@layout/fragment_detail_card" >
        <action
            android:id="@+id/action_detailCardFragment_to_itemFragment"
            app:destination="@id/itemFragment" />
    </fragment>
    <dialog
        android:id="@+id/bottomSheetFragment"
        android:name="com.example.tbchomework15.fragment.BottomSheetFragment"
        android:label="fragment_bottom_sheet"
        tools:layout="@layout/fragment_bottom_sheet" >
        <action
            android:id="@+id/action_bottomSheetFragment_to_itemFragment"
            app:destination="@id/itemFragment" />
        <argument
            android:name="id"
            app:argType="string" />
    </dialog>
</navigation>